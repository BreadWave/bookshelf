<% provide(:title, @user.name) %>

<div class="row">
	<aside class="col-md-4">

		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>

			<p><%= @user.email %></p>

			<p>Miembro desde: <%= @user.created_at.strftime("%d/%m/%Y") %></p>

			<p>User created: <%= distance_of_time_in_words(Time.now, @user.created_at, include_seconds: true) %> ago.</p>
		</section>

		<section class="stats">
			<%= render 'shared/stats' %>
		</section>

	</aside>

	<div class="col-md-8">
		<%= render 'follow_form' if logged_in? %>
		
		<% if @user.microposts.any? %>
			<h3>Posteos (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>

</div>