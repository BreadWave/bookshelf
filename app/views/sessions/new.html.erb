<% provide(:title, "Iniciar sesión") %>

<h1>Iniciar sesión</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, "Correo electronico" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "Contraseña" %>
      <%= link_to "¿Olvidaste tu contraseña?", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Recuerdame en este dispositivo</span>
      <% end %>


      <%= f.submit "Iniciar sesión", class: "btn btn-primary" %>

    <% end %>

    <p>¿Nuevo en nuestro sitio? <%= link_to "¡Registrese ahora!", signup_path %></p>
    
  </div>
</div>
